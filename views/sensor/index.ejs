    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                  <!-- add-buton call modal-default -->
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-default">
                    Add Sensor
